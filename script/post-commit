#!/bin/zsh

COMMIT_PICS_DIR=$(realpath ~/.git-commitpics)

if [ ! -d $COMMIT_PICS_DIR ]; then
	echo "Hello World!"
	git clone -b gh-pages https://github.com/ladislas/commitpics ~/.git-commitpics
fi

IMAGE_NAME="$(date +%y%m%d%H%M%S)-${PWD##*/}"
HUE=$(($(date +%S)*359/59))

echo $IMAGE_NAME

imagesnap $COMMIT_PICS_DIR/assets/img/$IMAGE_NAME.jpg -q -w 1

$(realpath ../../script/coloration) -h $HUE -s 75 -l 0 $COMMIT_PICS_DIR/assets/img/$IMAGE_NAME.jpg $COMMIT_PICS_DIR/assets/img/$IMAGE_NAME.jpg
